<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/vehicle_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/agencija_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/vehicle_image"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/vehicle_image"
        android:text="sdsdsdsdsd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/radno_vrijeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agencija_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/vehicle_image"
        android:text="sdsdsdsdsd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/cijena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radno_vrijeme"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/vehicle_image"
        android:text="sdsdsdsdsd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"/>

    <ImageButton
        android:background="@color/white"
        android:id="@+id/order_vehicle"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/booknow"/>

</RelativeLayout>